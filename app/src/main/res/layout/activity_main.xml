<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <Button
        android:id="@+id/btn_count_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/count_buttons" />

    <Button
        android:id="@+id/btn_text_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_flow" />

    <Button
        android:id="@+id/btn_convert_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/convert_image" />

    <Button
        android:id="@+id/btn_github_parser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/github_parser" />
</LinearLayout>
